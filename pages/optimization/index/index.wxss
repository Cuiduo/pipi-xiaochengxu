

/* 根布局 */

.root {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/*导航*/

.nav, .nav-floating {
  width: 734rpx;
  height: 84rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  position: absolute;
}

/* 导航（悬浮） */

.nav-floating {
  position: fixed;
  top: 0;
  z-index: 4;
  background: #fff;
}

/* 定位图标 */

.ic-address {
  width: 24rpx;
}

/* 地址 */

.nav-address {
  height: 100%;
  width: 240rpx;
  box-sizing: border-box;
  padding-left: 30rpx;
  align-items: center;
  display: flex;
}

/* 下三角图标 */

.ic-down {
  width: 16rpx;
}

/* 地址文本框 */

.nav-address-tv {
  max-width: 108rpx;
  color: #f1531f;
  font-size: 26rpx;
  margin-left: 12rpx;
  margin-right: 10rpx;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

/* 症状 */

.nav-symptom {
  max-width: 282rpx;
  color: #000;
  font-size: 32rpx;
  justify-content: center;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

/* 货架、分享、筛选 */

.nav-action {
  height: 100%;
  width: 240rpx;
  align-items: center;
  padding-right: 12rpx;
  display: flex;
  flex-direction: row-reverse;
  box-sizing: border-box;
}

/* 分享按钮 */

.bt-share {
  width: 76rpx;
  height: 76rpx;
  border-radius: 0rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0;
  padding: 0;
  background-color: rgba(0, 0, 0, 0)
}

/* 分享按钮去掉边框线 */

.bt-share::after {
  border: 0;
}

/* 货架、分享、筛选图标 */

.ic-action {
  padding: 18rpx;
  width: 40rpx;
}

/* 说明 */

.explain {
  width: 734rpx;
  height: 230rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-top: 96rpx;
  box-sizing: border-box;
  padding: 32rpx;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  box-shadow: 0 -8rpx 12rpx 0 rgba(0, 0, 0, 0.1);
}

/* 说明模块图标 */

.ic-explain {
  margin-right: 20rpx;
  width: 24rpx;
}

/* 说明item */

.explain-item {
  display: flex;
  font-size: 22rpx;
  color: #000;
  align-items: center;
}

/* 提示 */

.tip {
  width: 734rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f7f2eb;
  font-size: 20rpx;
  color: #e3b56d;
  z-index: 3;
}

/* 食材表 */

.tab, .tab-sticky {
  width: 734rpx;
  display: flex;
}

/* 吸顶食材表 */

.tab-sticky {
  position: sticky;
  z-index: 3;
  top: 0;
}

/* 食材表标题 */

.tab-title, .tab-title-head, .tab-title-last {
  width: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  border-bottom: 2rpx solid #333;
  background: #f0bb69;
  font-size: 22rpx;
  writing-mode: vertical-lr;
  text-orientation: upright;
  padding-top: 10rpx;
  letter-spacing: 10rpx;
  overflow: hidden;
  word-break: break-all;
  color: #000;
}

/* 食材表标题（头部） */

.tab-title-head {
  color: #fff;
}

/* 食材表表头图标 */

.ic-tab {
  width: 40rpx;
}

/* 食材表最后一个标题 */

.tab-title-last {
  border-bottom: 0;
}

/* 食材表内容 */

.tab-content {
  width: 690rpx;
  display: flex;
  box-sizing: border-box;
}

/* 食材表内容item */

.tab-content-item, .tab-content-item-head {
  height: 100rpx;
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
  padding: 10rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #333;
  border-left: 2rpx solid #333;
  background: #f0bb69;
  line-height: 1.2em;
  color: #000;
  font-size: 24rpx;
  word-break: break-all;
  overflow: hidden;
  position: relative;
}

/* 食材表内容item（头部） */

.tab-content-item-head {
  height: 80rpx;
}

/* 食材表加载更多 */

.tab-more, .tab-more-last {
  width: 690rpx;
  height: 68rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #333;
  border-left: 2rpx solid #333;
  color: #000;
}

/* 加载更多图标 */

.ic-more {
  width: 40rpx;
}

/* 食材表最后一个加载更多 */

.tab-more-last {
  border-bottom: 0;
}

/* 提示圆点 */

.dot {
  height: 14rpx;
  width: 14rpx;
  border-radius: 7rpx;
  background: #f1531f;
  position: absolute;
  right: 14rpx;
  top: 16rpx;
}

/* 食材弹窗 */

.foodPop-tl, .foodPop-tm, .foodPop-tr, .foodPop-bl, .foodPop-bm, .foodPop-br {
  width: 222rpx;
  height: auto;
  position: absolute;
  z-index: 2;
  align-items: center;
  display: flex;
}

/* 食材弹窗-上左 */

.foodPop-tl {
  transform: translate(5.5%, -94rpx);
  flex-direction: column-reverse;
}

/* 食材弹窗-上中 */

.foodPop-tm {
  transform: translate(-18%, -94rpx);
  flex-direction: column-reverse;
}

/* 食材弹窗-上右 */

.foodPop-tr {
  transform: translate(-42%, -94rpx);
  flex-direction: column-reverse;
}

/* 食材弹窗-下左 */

.foodPop-bl {
  transform: translate(5.5%, 99rpx);
  flex-direction: column;
}

/* 食材弹窗-下中 */

.foodPop-bm {
  transform: translate(-18%, 99rpx);
  flex-direction: column;
}

/* 食材弹窗-下右 */

.foodPop-br {
  transform: translate(-42%, 99rpx);
  flex-direction: column;
}

/* 食材弹窗裁剪 */

.foodPop-triangle-top, .foodPop-triangle-bottom {
  height: 19rpx;
  width: 27rpx;
  background: rgba(0, 0, 0, 0.6);
}

/* 三角在上 */

.foodPop-triangle-top {
  top: 0;
  clip-path: polygon(50% 0%, 100% 100%, 0% 100%);
}

/* 三角在下 */

.foodPop-triangle-bottom {
  bottom: 0;
  clip-path: polygon(0% 0%, 50% 100%, 100% 0%);
}

/* 弹窗内容区域 */

.foodPop-content {
  height: 75rpx;
  width: 100%;
  border-radius: 8rpx;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 弹窗内容区域文字 */

.foodPop-content-tv {
  height: 100%;
  flex: 1;
  justify-content: center;
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #fff;
}

/* 弹窗内容区域文字 */

.foodPop-content-line {
  height: 24rpx;
  width: 1rpx;
  background: #fff;
}

/* 索引布局 */

.index {
  width: 64rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: fixed;
  left: 0;
  top: 50%;
  z-index: 4;
  max-height: 80vh;
  transform: translate(0, -50%);
}

/* 索引item */

.index-item, .index-item-first, .index-item-last {
  height: 90rpx;
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  background: rgba(0, 0, 0, 0.35);
  font-size: 26rpx;
  color: #fff;
}

/* 第一个索引item */

.index-item-first {
  border-top-right-radius: 8rpx;
}

/* 最后一个索引item */

.index-item-last {
  border-bottom-right-radius: 8rpx;
}

/* 索引item点击样式 */

.index-item-press {
  background: rgba(0, 0, 0, 0.4) !important;
}

/* 索引item分割线 */

.index-line {
  width: 42rpx;
  height: 1rpx;
  border-radius: 1rpx;
  background: #fff;
  opacity: 0.2;
  position: absolute;
}

/* 宽度撑满父级 */

.width-match-parent {
  width: 100%;
}

/* 底部弹窗 */

.sheet {
  width: 100%;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
}

/* 底部弹窗标题部分 */

.sheet-title {
  width: 100%;
  height: 86rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

/* 底部弹窗关闭图标 */

.ic-close {
  padding: 20rpx;
  width: 24rpx;
}

/* 底部弹窗标题排序部分 */

.sheet-title-prority {
  display: flex;
  align-items: center;
}

/* 底部弹窗标题排序部分文字 */

.prority-tv-yes, .prority-tv-no {
  padding: 20rpx;
  font-size: 22rpx;
}

/* 底部弹窗标题排序部分文字未选中 */

.prority-tv-no {
  color: #000;
}

/* 底部弹窗标题排序部分文字未选中 */

.prority-tv-yes {
  color: #f1531f;
}

/* 底部弹窗标题排序部分分割线 */

.sheet-title-prority-line {
  height: 30rpx;
  width: 1rpx;
  background: #f2f2f2;
}

/* 底部弹窗分割线 */

.sheet-line {
  width: 100%;
  height: 1rpx;
  background: #f4f4f4;
}

/* 底部弹窗内容部分 */

.sheet-content {
  width: 100%;
  height: 63vh;
}

/* 底部弹窗内容部分里层 */

.sheet-content-in {
  width: 100%;
  box-sizing: border-box;
  padding-left: 40rpx;
  padding-right: 40rpx;
  display: flex;
  flex-direction: column;
}

/* 商品 */

.goods {
  width: 100%;
  height: 162rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* 商品分割线 */

.goods-line {
  width: 100%;
  height: 1rpx;
  background: #f4f4f4;
}

/* 商品内容 */

.goods-content {
  width: 518rpx;
  height: 100%;
  padding-top: 24rpx;
  padding-bottom: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
}

/* 商品图片 */

.ic-goods {
  flex-shrink: 0;
  height: 128rpx;
  width: 128rpx;
}

/* 商品名称 */

.goods-name {
  max-width: 100%;
  color: #333;
  font-size: 30rpx;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

/* 商品内容里层 */

.goods-content-in {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

/* 商品价格 */

.goods-price {
  color: #f1531f;
  line-height: 32rpx;
}

/* 商品价格人民币符号 */

.price-a {
  font-size: 24rpx;
}

/* 商品价格整数部分 */

.price-b {
  font-size: 36rpx;
}

/* 商品价格小数部分 */

.price-c {
  font-size: 26rpx;
}

/* 商品原价 */

.price-d {
  color: #b2b2b2;
  text-decoration: line-through;
  margin-left: 16rpx;
  font-size: 20rpx;
}

/* 购物车图标 */

.ic-shop {
  width: 52rpx;
}
