             </view>
              
               <view class="padding-xs bg-img" style="background-image:url(https://image.weilanwl.com/img/square-2.jpg);">
                <image class="deleteview" src='../../../images/delete_icon.png'></image>
             </view>

              <view class="padding-xs bg-img border">
                
                 <image  class='addview' src='../../../images/add_icon.png' bindtap='gotoShow'></image>
                
              </view>
         </view>
      </view>
