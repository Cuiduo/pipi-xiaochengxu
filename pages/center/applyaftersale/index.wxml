    <view class='scrollcontent' style="height:{{windowHeight-91}}px;">
      <view class='inputcontent'>
        <textarea placeholder='请您在此描述问题，我们将尽快为您解决...' maxlength='100'  placeholder-style='placeholder'>
        </textarea>
      </view>
      <view class='pictureview'>
          <view class="grid col-4 grid-square flex-sub">
             
            <view class="padding-xs bg-img" style="background-image:url(https://image.weilanwl.com/img/square-1.jpg);">
               <image class="deleteview" src='../../../images/delete_icon.png'></image>
            </view>

